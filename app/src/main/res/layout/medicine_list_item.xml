<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewItemStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_view_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/medicine_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicine_name"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/medicine_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicine_status"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_item_name"/>

        <TextView
            android:id="@+id/medicine_item_number_in_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicine_num_in_container"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_item_status"/>

        <RelativeLayout
            android:id="@+id/card_view_expanded_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medicine_item_number_in_container"
            app:layout_constraintStart_toEndOf="parent">

            <View
                android:id="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                style="@style/Divider"/>

            <TextView
                android:id="@+id/medicines_to_take_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/to_take_text"/>

            <Button
                android:id="@+id/take_medicine_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/take_medicine_button"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>